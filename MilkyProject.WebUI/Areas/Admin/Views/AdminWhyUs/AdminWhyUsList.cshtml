@model List<MilkyProject.WebUI.Dtos.WhyUsDto.ResultWhyUsDto>
@{
    ViewData["Title"] = "AdminWhyUsList";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h3 style="color :limegreen">Edit Ehy Us</h3>
<table class="table table-head-bg-success">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.WhyusId</td>
                <td>@item.Title</td>
                <td>@item.Description.Substring(0,30)...</td>            
                <td> <a href="/Admin/AdminWhyUs/AdminUpdateWhyUs/@item.WhyusId" class="btn btn-secondary btn-border btn-round"> Edit </a></td>
            </tr>
        }


    </tbody>
</table>
